source 'https://rubygems.org'

gem 'rails', '3.2.9'
gem 'sqlite3'
gem 'jquery-rails'
gem 'jbuilder'
gem 'annotate'
gem 'savon'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :test, :development do
  gem 'rspec-rails'
end

group :test do
  gem 'webmock', '1.8.11'
  gem 'vcr'
  gem 'factory_girl_rails'
  gem 'spork-rails'
end